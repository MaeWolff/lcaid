{% schema %}
{
  "name": "Double collections",
  "class": "w-full",
  "settings": [
    {
      "type": "collection",
      "id": "collection_1",
      "label": "Première collection"
    },
    {
      "type": "collection",
      "id": "collection_2",
      "label": "Deuxième collection"
    }
  ]
}
{% endschema %}

{% assign collection_1 = collections[section.settings.collection_1] %}
{% assign collection_2 = collections[section.settings.collection_2] %}

<section class="flex w-full flex-col gap-8 margin-px-1 lg:grid lg:grid-cols-2 lg:gutter-gap-1">
  <a href="{{ collection_1.url }}" class="flex w-full flex-col items-center justify-center gap-3 text-center">
    <div class="h-[246px] w-full bg-neutral-light-grey lg:h-[330px]">
      <img
        src="{{ collection_1.featured_image |  image_url: width: 1000 }}"
        alt="Image {{ collection_1.title }}"
        width="100%"
        height="100%"
        class="h-full w-full rounded-sm object-cover"
        loading="lazy"
      >
    </div>

    <div class="flex flex-col gap-1">
      <h2 class="text-[18px] font-medium">{{ collection_1.title }}</h2>
      <div class="line-clamp-2 text-neutral-mid-grey">{{ collection_1.description }}</div>
    </div>
  </a>

  <a href="{{ collection_2.url }}" class="flex w-full flex-col items-center justify-center gap-3 text-center">
    <div class="h-[246px] w-full bg-neutral-light-grey lg:h-[330px]">
      <img
        src="{{ collection_2.featured_image |  image_url: width: 1000 }}"
        alt="Image {{ collection_2.title }}"
        width="100%"
        height="100%"
        class="h-full w-full rounded-sm object-cover"
        loading="lazy"
      >
    </div>

    <div class="flex flex-col gap-1">
      <h2 class="text-[18px] font-medium">{{ collection_2.title }}</h2>
      <div class="line-clamp-2 text-neutral-mid-grey">{{ collection_2.description }}</div>
    </div>
  </a>
</section>
