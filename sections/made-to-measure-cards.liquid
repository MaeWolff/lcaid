{% schema %}
{
  "name": "3. Cards",
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Carte",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "Titre de la carte"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texte",
          "default": "Description de la carte."
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Image de fond"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cards horizontales",
      "blocks": [
        {
          "type": "card",
          "settings": {
            "title": "Moodboard & Dessin",
            "text": "LCAID crée à partir de zéro un modèle qui vous convient et s'inspire de votre culture tout en le modernisant."
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Prise de mesure",
            "text": "En physique ou en distanciel via une application je ne sais quoi du je ne sais rien."
          }
        },
        {
          "type": "card",
          "settings": {
            "title": "Choix du tissu",
            "text": "LCAID crée à partir de zéro un modèle qui vous convient et s'inspire de votre culture tout en le modernisant."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section id="panel" class="flex min-h-screen items-center justify-center bg-white py-16 lg:py-0">
  <div class="flex flex-col gutter-gap-1 margin-px-1 lg:flex-row">
    {% for block in section.blocks %}
      <div
        class="relative flex h-[460px] w-full flex-col justify-between overflow-hidden rounded-sm bg-neutral-black p-8 text-white lg:max-w-[426px]"
      >
        {% if block.settings.background_image %}
          <div class="absolute inset-0 z-0">
            <img
              src="{{ block.settings.background_image | image_url }}"
              alt="{{ block.settings.title }}"
              class="h-full w-full object-cover opacity-50"
              width="{{ block.settings.background_image.width }}"
              height="{{ block.settings.background_image.height }}"
              loading="lazy"
            >
          </div>
        {% else %}
          <div class="absolute -top-1/2 left-1/4 h-[500px] w-[500px] rounded-full bg-white/10"></div>
        {% endif %}

        <div class="relative z-10 flex h-full flex-col justify-between">
          <h3 class="text-2xl font-medium">{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
