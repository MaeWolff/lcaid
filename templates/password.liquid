{% layout none %}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>LCAID - Coming Soon</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1">

    {%- liquid
      render 'vite-tag' with 'theme.css'
      render 'vite-tag' with 'css/fonts.css'
      render 'vite-tag' with 'theme.js'
    -%}
  </head>

  <body class="font-satoshi text-[14px] text-neutral-black antialiased">
    <main class="mx-auto my-auto flex h-[100dvh] max-w-xl flex-col items-center justify-center gap-8 margin-px-1">
      {% render 'logo' %}
      {% form 'storefront_password' %}
        {{ form.errors | default_errors }}
        <input
          type="password"
          name="password"
          placeholder="Mot de passe"
          class="w-full border border-gray-300 px-2 py-2 focus:ring focus:ring-indigo-200"
        >
        <button
          type="submit"
          class="mt-3 w-full bg-neutral-black py-2 text-white transition hover:bg-neutral-black/90"
        >
          Entrer
        </button>
      {% endform %}

      <footer>
        <h4 class="modal__heading heading--4">Are you the store owner?</h4>
        <p>
          <a href="/admin" class="underline">Log in here</a>
        </p>
      </footer>
    </main>
  </body>
</html>
