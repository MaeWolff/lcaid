<div
  x-data="{ hover: false }"
  class="relative"
>
  <a
    href="{{ product.url | within: collection }}"
    class="group block"
    @mouseover="hover = true"
    @mouseleave="hover = false"
  >
    <div class="relative aspect-square h-full w-full ">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image.src | image_url }}"
          alt="{{ product.featured_image.alt | escape }}"
          x-show="!hover"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
          class="absolute inset-0 h-full w-full rounded-sm object-cover"
          width="100%"
          height="100%"
        >

        <img
          src="{{ product.images[1] | image_url }}"
          alt="{{ product.images[1].alt | escape }}"
          x-show="hover"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
          class="absolute inset-0 h-full w-full rounded-sm object-cover"
          width="100%"
          height="100%"
        >
      {% else %}
        <div class="relative aspect-square h-full w-full bg-neutral-black"></div>
      {% endif %}
    </div>

    <div class="mt-3 flex w-full flex-col items-center gap-1">
      <p class="line-clamp-1 font-semibold">{{ product.title }}</p>
      <div class="flex flex-row gap-2 text-[12px] text-neutral-mid-grey">
        {% if product.compare_at_price %}
          <p class="line-through">{{ product.compare_at_price | money }}</p>
        {% endif %}

        <p>{{ product.price | money }}</p>
      </div>
    </div>
  </a>
</div>
