{% form 'currency', id: 'currency-switcher' %}
  <div class="relative w-full max-w-[86px]">
    <select
      aria-label="currency"
      name="currency"
      onchange="this.form.submit();"
      class="w-full cursor-pointer appearance-none border-0 bg-transparent pr-8"
    >
      {% for currency in shop.enabled_currencies %}
        {% assign iso_code = currency.iso_code %}
        <option
          value="{{ iso_code }}"
          {% if iso_code == cart.currency.iso_code %}
            selected
          {% endif %}
        >
          ({{ currency.symbol }}) - {{ iso_code }}
        </option>
      {% endfor %}
    </select>

    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-1">
      <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
        <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" />
      </svg>
    </div>
  </div>
{% endform %}
